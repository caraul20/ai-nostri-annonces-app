rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // TEMPORARY PERMISSIVE RULES FOR DEBUGGING CORS ISSUES
    // TODO: Replace with secure rules after testing
    
    match /{allPaths=**} {
      // Allow all reads for now
      allow read: if true;
      
      // Allow writes for authenticated users
      allow write: if request.auth != null;
      
      // Allow deletes for authenticated users
      allow delete: if request.auth != null;
    }
  }
}
